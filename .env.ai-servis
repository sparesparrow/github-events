# GitHub Events Monitor Configuration for sparesparrow/ai-servis
# Focused monitoring configuration

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# Target Repository (focused monitoring)
TARGET_REPOSITORIES=sparesparrow/ai-servis

# Database Configuration (SQLite for focused monitoring)
DATABASE_PROVIDER=sqlite
DATABASE_PATH=./ai_servis_events.db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Polling Configuration (more frequent for focused monitoring)
POLL_INTERVAL=180  # 3 minutes for focused monitoring

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ai_servis_monitoring.log

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL=180  # 3 minutes cache for real-time insights

# MCP Configuration
MCP_TRANSPORT=stdio