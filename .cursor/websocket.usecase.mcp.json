{
  "mcpServers": {
    "github-events-monitor-websocket": {
      "command": "docker",
      "args": [
        "run",
        "-d",
        "--name", "github-events-monitor-websocket",
        "-p", "8000:8000",
        "-p", "8080:8080",
        "-e", "GITHUB_TOKEN=${{GITHUB_PERSONAL_ACCESS_TOKEN}}",
        "-e", "API_PORT=8000",
        "-e", "MCP_WEBSOCKET_PORT=8080",
        "-e", "MCP_TRANSPORT=websocket",
        "-v", "/home/sparrow/mcp/data/github-events:/app/data",
        "sparesparrow/github-events-monitor:latest"
      ],
      "description": "GitHub Events Monitor with WebSocket transport for real-time MCP communication"
    }
  },
  "websocketConfig": {
    "endpoint": "ws://localhost:8080",
    "protocol": "mcp",
    "features": {
      "realTimeUpdates": true,
      "eventStreaming": true,
      "bidirectionalCommunication": true
    }
  },
  "clientConfig": {
    "websocket": {
      "url": "ws://localhost:8080",
      "options": {
        "reconnect": true,
        "maxReconnectAttempts": 5,
        "reconnectInterval": 1000
      }
    }
  }
}
